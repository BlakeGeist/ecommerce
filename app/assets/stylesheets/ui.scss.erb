html {
  background-color: #fff;
  font-family: sans-serif;
  height: 100%;
}
body {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  height: 100%;
  margin: 0
}
header {
  flex: 0 1 1400px;
}
.header-nav {
  display: flex;
  justify-content: space-between;
  line-height: 40px;
}
  .nav-right {
    display: flex;
  }
    .nav-item {
      padding: 0 7px;
    }
main {
  display: flex;
  flex: 0 1 1400px;
  flex-wrap: wrap;
}
footer {
 background: #262626;
 display: flex;
 flex: 1 1 100%;
 flex-wrap: wrap;
 justify-content: center;
 margin: 30px 0 0 0;
 padding: 30px 0 0 0;
}
  .footer-body {
    flex: 0 1 1400px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 15px;
  }
  .footer-footer {
    padding: 0 15px;
  }
 .footer-item {
   display: flex;
   flex-direction: column;
   flex-wrap: wrap;
   &.mod-footer-nav {}
 }
  .footer-item-heading {
    color: #f98db7;
    font-weight: bold;
    line-height: 50px;
  }
  .footer-nav-item {
    color: #a0a0a0;
    display: block;
    font-size: 14px;
    line-height: 30px;
    width: 100%;
  }
  .footer-footer {
    background-color:#222222;
    display: flex;
    justify-content: center;
    flex: 1 1 100%;
    margin-top: 30px;
  }
    .footer-footer-body {
      color: #585858;
      flex: 0 1 1400px;
      font-size: 10px;
      line-height: 50px;
    }
a {
  color: #0066c0;
  text-decoration: none;
}
.carousel-slide {
  border-radius: 5px;
  overflow: hidden;
  img {
      display: block;
      width: 100%;
  }
}
.paginate-link {
  margin-top: 10px;
  text-align: right;
}
.button {
  border: 2px solid;
  border-radius: 5px;
  padding: 10px 20px;
  &:hover {
    border: 2px solid #fff;
    background-color: #0066c0;
    color: #fff;
  }
}
