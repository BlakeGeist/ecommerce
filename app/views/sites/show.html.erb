    <% @categories.each do |category| %>

      <%= link_to category.name, category_url(category), class: 'categories-sidebar-item' %>

    <% end %>

    <%= link_to 'View All Categories', categories_url, class: 'categories-sidebar-item' %>

  </aside>

-->

</main>

<%= render 'templates/footer' %>
