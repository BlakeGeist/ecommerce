<%= render 'templates/header' %>

  <% @product.product_photos.each do |image| %>

    <%= image.image %>

  <% end %>

<main>

  <div class="carousel">

    <div class="carousel-slide mod-one"><%= image_tag 'banner-1.jpg' %></div>

  </div>

  <section class="main">

    <% unless @paginated %>

      <h2>Top Brands</h2>

      <%= render '/templates/brands' %>

      <hr />

      <h2>Top Categories</h2>

      <div class="categories">

        <% @categories.each do |category| %>

          <%= render '/templates/category_products', product: category_product(category), category: category  %>

        <% end %>

      </div>

      <hr />

      <h2>Top Adult Products</h2>

    <% end %>

    <%= render '/templates/products' %>

    <% if @paginated %>

      <%= will_paginate @products %>

    <% else %>

      <div class='paginate-link'><%= link_to 'More', '/products/page/1/', class: 'button' %></div>

    <% end %>

  </section>

