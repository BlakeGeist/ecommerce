<div class="products-product">

  <%= link_to category.name, category_url(category), class: 'products-product-heading' %>

  <% if product && product.product_photos.first %>

    <%= link_to image_tag(product.product_photos.first.image.url(:medium), class: 'products-product-image'), category_url(category), class: 'products-product-link' %>

  <% end %>


</div>
