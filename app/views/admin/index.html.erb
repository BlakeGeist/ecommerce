<header>

  <nav>

    <%= render '/templates/user_nav' %>

  </nav>

</header>

<main>

  <div class="admin-body">

    <table>

      <% @sites.each do |site| %>

        <tr>

          <td><%= site.name %></td>

          <td><%= site.slug %></td>

          <td><%= link_to 'Delete', site_url(site.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <td>

            <%= form_for site do |f| %>

              <%= f.text_field :name %>

              <%= f.submit %>

            <% end %>

          </td>

        </tr>

      <% end %>

    </table>

    <div>

      <%= form_for @site do |f| %>

        <%= f.text_field :name %>

        <%= f.submit %>

      <% end %>

    </div>

  </div>

</main>
